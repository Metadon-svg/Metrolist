<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Используем Theme.AppCompat, так как она точно есть в зависимостях -->
    <style name="Theme.Metrolist" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Цвета статус-бара и навигации -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Для светлой темы иконок в статус-баре (API 23+) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Тема для Splash-экрана -->
    <style name="Theme.Metrolist.Splash" parent="Theme.Metrolist">
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>
</resources>
